{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@lib/*": [
        "./lib/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}